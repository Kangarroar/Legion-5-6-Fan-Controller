<Window
    x:Class="Lenovo_Fan_Controller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Legion Fan Controller">

    <Grid Background="#1E1E1E">
        <!-- Main Content -->
        <Grid Margin="12">
            <!-- Title -->
            <TextBlock Text="Legion Fan Controller" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Pane -->
                <Border Grid.Column="0" 
                        Width="200" 
                        Margin="0,0,12,0"
                        Background="#2A2A2A"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="PROFILES" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Opacity="0.7"
                                   Margin="0,0,0,8"/>

                        <ListView x:Name="ProfileList" 
                                  SelectionMode="Single"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <ListViewItem Content="Default" IsSelected="True"/>
                            <ListViewItem Content="Performance"/>
                            <ListViewItem Content="Quiet"/>
                        </ListView>

                        <Button Content="Add profile" 
                                Background="#3A3A3A"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Main Content -->
                <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Profile Header -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text='Profile: "Default"' 
                                   Style="{StaticResource HeaderTextBlockStyle}"/>
                            <TextBlock Text="Adjust fan curves for each temperature point"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Opacity="0.8"
                                   Margin="0,4,0,16"/>
                        </StackPanel>

                        <!-- Fan Controls with Temperature Points -->
                        <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Spacing="24">

                                <!-- Fan 1 Column -->
                                <StackPanel Spacing="8" Width="80">
                                    <TextBlock Text="Fan 1" HorizontalAlignment="Center"/>
                                    <Slider Value="1000" 
                                        SmallChange="100" 
                                        LargeChange="500"
                                        Orientation="Vertical" 
                                        Minimum="1000" 
                                        Maximum="4400" 
                                        Height="200"/>
                                    <StackPanel Spacing="4" Margin="0,8,0,0">
                                        <TextBlock Text="CPU Temp" Opacity="0.8" FontSize="12"/>
                                        <TextBox Text="20" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="GPU Temp" Opacity="0.8" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBox Text="20" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Fan 2 Column -->
                                <StackPanel Spacing="8" Width="80">
                                    <TextBlock Text="Fan 2" HorizontalAlignment="Center"/>
                                    <Slider Value="2400" 
                                        SmallChange="100" 
                                        LargeChange="500"
                                        Orientation="Vertical" 
                                        Minimum="1000" 
                                        Maximum="4400" 
                                        Height="200"/>
                                    <StackPanel Spacing="4" Margin="0,8,0,0">
                                        <TextBlock Text="CPU Temp" Opacity="0.8" FontSize="12"/>
                                        <TextBox Text="45" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="GPU Temp" Opacity="0.8" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBox Text="50" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Fan 3 Column -->
                                <StackPanel Spacing="8" Width="80">
                                    <TextBlock Text="Fan 3" HorizontalAlignment="Center"/>
                                    <Slider Value="3700" 
                                        SmallChange="100" 
                                        LargeChange="500"
                                        Orientation="Vertical" 
                                        Minimum="1000" 
                                        Maximum="4400" 
                                        Height="200"/>
                                    <StackPanel Spacing="4" Margin="0,8,0,0">
                                        <TextBlock Text="CPU Temp" Opacity="0.8" FontSize="12"/>
                                        <TextBox Text="65" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="GPU Temp" Opacity="0.8" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBox Text="55" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Fan 4 Column -->
                                <StackPanel Spacing="8" Width="80">
                                    <TextBlock Text="Fan 4" HorizontalAlignment="Center"/>
                                    <Slider Value="4000" 
                                        SmallChange="100" 
                                        LargeChange="500"
                                        Orientation="Vertical" 
                                        Minimum="1000" 
                                        Maximum="4400" 
                                        Height="200"/>
                                    <StackPanel Spacing="4" Margin="0,8,0,0">
                                        <TextBlock Text="CPU Temp" Opacity="0.8" FontSize="12"/>
                                        <TextBox Text="70" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="GPU Temp" Opacity="0.8" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBox Text="60" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Fan 5 Column -->
                                <StackPanel Spacing="8" Width="80">
                                    <TextBlock Text="Fan 5" HorizontalAlignment="Center"/>
                                    <Slider Value="4400" 
                                        SmallChange="100" 
                                        LargeChange="500"
                                        Orientation="Vertical" 
                                        Minimum="1000" 
                                        Maximum="4400" 
                                        Height="200"/>
                                    <StackPanel Spacing="4" Margin="0,8,0,0">
                                        <TextBlock Text="CPU Temp" Opacity="0.8" FontSize="12"/>
                                        <TextBox Text="75" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="GPU Temp" Opacity="0.8" FontSize="12" Margin="0,4,0,0"/>
                                        <TextBox Text="65" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Advanced Settings -->
                        <Expander Grid.Row="2" 
                              Header="Advanced Settings"
                              IsExpanded="False"
                              Margin="0,12,0,0">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="24">
                                    <StackPanel>
                                        <TextBlock Text="Acceleration Value" Margin="0,0,0,4"/>
                                        <Slider Width="200" Minimum="1" Maximum="5" Value="2"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Deceleration Value" Margin="0,0,0,4"/>
                                        <Slider Width="200" Minimum="1" Maximum="5" Value="2"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Button Content="Turbo Mode" 
                                        CornerRadius="4"
                                        Background="{ThemeResource AccentButtonBackground}"/>
                                    <Button Content="Quiet Mode" 
                                        CornerRadius="4"
                                        Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Save Button -->
                        <Button Content="Save Changes" 
                            HorizontalAlignment="Right"
                            Grid.Row="2"
                            Margin="0,12,0,0"
                            CornerRadius="4"
                            Background="{ThemeResource AccentButtonBackground}"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>